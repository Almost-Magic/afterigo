{
  "name": "amtl-writer",
  "version": "1.0.0",
  "description": "CK Writer -- 8-Mode Writing Studio (AMTL Desktop)",
  "main": "../../shared/main.js",
  "scripts": {
    "start": "electron ../../shared/main.js --config=./config.json",
    "build": "electron-builder --win"
  },
  "author": "Mani Padisetti <mani@almostmagic.tech>",
  "license": "Proprietary",
  "build": {
    "appId": "tech.almostmagic.writer",
    "productName": "CK Writer",
    "extends": null,
    "files": [
      "../../shared/**/*",
      "config.json"
    ],
    "extraMetadata": {
      "main": "shared/main.js"
    },
    "directories": {
      "output": "../../dist/writer",
      "buildResources": "../../shared"
    },
    "win": {
      "target": "nsis",
      "icon": "../../icons/writer.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "shortcutName": "CK Writer"
    }
  }
}
